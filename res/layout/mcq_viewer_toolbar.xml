<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActionBarCompat" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <Button
            android:id="@+id/btn_mcq_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mcq_prev" />

        <com.meditrainer.medroid.util.Timer
            android:id="@+id/mcq_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer" />

        <Button
            android:id="@+id/btn_mcq_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mcq_next" />

    </LinearLayout>

</LinearLayout>